{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2017"
    ],
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2017",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "typeRoots": [
      "node_modules/@0xproject/typescript-typings/types",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/server/**/*",
    "src/common/**/*",
    "webpack/*"
  ]
}
